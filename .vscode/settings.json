{
    "editor.fontFamily": "DejaVu Sans Mono",
    "workbench.colorTheme": "One Dark Pro",
    "files.autoSave": "onFocusChange",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontSize": 16,
    "editor.detectIndentation": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.snippetSuggestions": "top",
    "terminal.integrated.fontWeightBold": "normal",
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "cmake.configureOnEdit": false,
    "cmake.configureOnOpen": false,
    "cmake.parallelJobs": 8,
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--background-index",
        "--clang-tidy",
        "--clang-tidy-checks=clang-analyzer-*,cppcoreguidelines-*,performance-*,bugprone-*,misc-*,google-*,modernize-*,readability-*,portability-*",
        "--completion-style=bundled",
        "--all-scopes-completion",
        "--function-arg-placeholders",
        "--fallback-style=Microsoft",
        "--header-insertion=iwyu",
        "--header-insertion-decorators",
        "-j=6",
        "--malloc-trim",
        "--pch-storage=memory",
        "--pretty"
    ],
    "clangd.fallbackFlags": [
        "-xc++",
        "-std=c++11"
    ],
    "editor.tokenColorCustomizations": {
        "[One Dark Pro]": {
            "comments": "#56A6AE",
            "keywords": {
                "fontStyle": "italic"
            },
            "textMateRules": [
                {
                    "scope": "keyword.operator.bitwise.shift.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "keyword.operator.assignment.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "keyword.operator.bitwise.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "storage.modifier.reference.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "keyword.operator.arithmetic.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "keyword.operator.increment.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "keyword.operator.ternary.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "meta.preprocessor.macro.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "support.function.cpp",
                    "settings": {
                        "foreground": "#61afef"
                    }
                },
                {
                    "scope": "keyword.operator.comparison.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "entity.name.function.definition.special.member.destructor.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "storage.modifier.pointer.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "variable.parameter.cpp",
                    "settings": {
                        "foreground": "#D19A66"
                    }
                },
                {
                    "scope": "variable.other.readwrite.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "keyword.operator.decrement.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "entity.name.namespace.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "keyword.operator.assignment.compound.bitwise.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "constant.character.escape.line-continuation.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "keyword.operator.logical.cpp",
                    "settings": {
                        "foreground": "#C678DD"
                    }
                }
            ]
        }
    }
}