{
    "editor.fontFamily": "DejaVu Sans Mono",
    "workbench.colorTheme": "One Dark Pro",
    "files.autoSave": "onFocusChange",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontSize": 16,
    "editor.detectIndentation": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "terminal.integrated.fontWeightBold": "normal",
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "cmake.configureOnEdit": false,
    "cmake.configureOnOpen": false,
    "cmake.parallelJobs": 16,
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--background-index",
        "--clang-tidy",
        "--clang-tidy-checks=clang-analyzer-*,cppcoreguidelines-*,performance-*,bugprone-*,misc-*,google-*,modernize-*,readability-*,portability-*",
        "--completion-style=bundled",
        "--all-scopes-completion",
        "--function-arg-placeholders",
        "--fallback-style=Microsoft",
        "--header-insertion=iwyu",
        "--header-insertion-decorators",
        "-j=12",
        "--malloc-trim",
        "--pch-storage=memory",
        "--pretty"
    ],
    "clangd.fallbackFlags": [
        "-xc++",
        "-std=c++11"
    ],
    "editor.tokenColorCustomizations": {
        "[One Dark Pro]": {
            "keywords": {
                "fontStyle": "italic"
            },
            "textMateRules": [
                {
                    "scope": "punctuation.definition.comment",
                    "settings": {
                        "foreground": "#56A6AE",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "comment.line.double-slash",
                    "settings": {
                        "foreground": "#56A6AE",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "comment.block.cpp",
                    "settings": {
                        "foreground": "#56A6AE",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "keyword.operator.bitwise.shift.cpp",
                    "settings": {
                        "foreground": "#ABB2BF"
                    }
                },
                {
                    "scope": "keyword.operator.comparison.cpp",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "keyword.operator.bitwise",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "storage.modifier.reference.cpp",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "keyword.operator.assignment.cpp",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "keyword.operator.arithmetic",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "variable.other.readwrite.cpp",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "meta.function.definition.cpp",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "keyword.operator.logical",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "keyword.operator.increment.cpp",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "keyword.operator.assignment.compound",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "keyword.operator.decrement.cpp",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": "variable.parameter.cpp",
                    "settings": {
                        "foreground": "#ABB2BF",
                        "fontStyle": ""
                    }
                },
            ]
        }
    },
}